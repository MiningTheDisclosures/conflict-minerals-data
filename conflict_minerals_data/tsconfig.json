{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "lib": [ "es2015", "dom" ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./typings",
    "sourceMap": true,
    "strictNullChecks": false, // @angular/core cannot handle strict null cheks
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5"
  }
}